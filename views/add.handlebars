

    
    
    <form class="add_form"method="POST" action="/user/add" enctype="multipart/form-data">
        <h2>Create A Room</h2>
        <input type="text" name="title" id="title" placeholder="Title"> <br><br>

        <input type="number" name="price" min="1.00" id="price" placeholder="$ Price">/ night <br><br>

        <input type="text" name="description" id="description" placeholder="Description"> <br><br>
        
        <select name=location>
                <option >Anywhere</option>
                <option value="Montreal">Montreal</option>
                <option value="Vancouver">Vancouver</option>
                <option value="Calgary">Calgary</option>
                <option value="Toronto">Toronto</option>
            </select> <br><br>

        <input type="file" name="profilePic" > 

        <input type="submit" value="Create A Room">

    </form>

    {{#each error}}
    <div class="add_error">{{this}}</div>
{{/each}}