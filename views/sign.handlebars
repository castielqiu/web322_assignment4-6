<div id="signup_grid">
    <div class="signup_box1"></div>

    <div id="signup_box2">

        <div id="signup_option">
            Sign up with <a class=" signup_link" href="facebook.com">Facebook</a> or <a class="signup_link"
                href="google.com">Google</a>
        </div>

        <div id="signup_or">
            or
        </div>
        <div>
            <form method="POST" action="/user/sign">
                <label class="signup_label">First Name</label>
                <div class="signup_input2">
                    <input class="signup_input" type="text" id="firstname" name=firstname placeholder="First Name">
                </div>
                <label class="signup_label">Last Name</label>
                <div class="signup_input2">
                    <input class="signup_input" type="text" id="lastname" name=lastname placeholder="Last Name">
                </div>
                <label class="signup_label">Email</label>
                <div class="signup_input2">
                    <input class="signup_input" type="email" id="email" name=email placeholder="Email">
                </div>
                <label class="signup_label">Password</label>
                <div class="signup_input2">
                    <input class="signup_input" type="password" id="password" name=password placeholder="Password">
                </div>
                <label class="signup_label">Confirm your Password</label>
                <div class="signup_input2">
                    <input class="signup_input" type="password" id="password2" name=password2 placeholder="Password">
                </div>
                <label class="signup_label">Birthday</label>
                <div class="signup_input2">
                    <input class="signup_input" type="date" id="birthday" name=birthday placeholder="Birthday">
                </div>
                <div class="login_error">
                    {{#each message}}
                    <p>{{this}}</p>
                    {{/each}}
                </div>
                <div id="signup_submit_box">
                    <input id="signup_submit" type="submit" value="Sign up">
                </div>
            </form>
        </div>
    </div>
    <div class="signup_box1">
</div>
</div>