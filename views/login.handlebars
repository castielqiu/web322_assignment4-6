<div id=login_maingrid>
    <div></div>
    <div id="login_form">
        <div>
            <form method="POST" action="/user/login">
                <div>
                    <input class="login_input" type="text" placeholder="Username" name="email">
                </div>
                <div>
                    <input class="login_input" type="password" placeholder="password" name="password">
                </div>
                <div>
                    <a href="sign.handlebars" class="login_forgot">Forgot your password?</a>
                </div>
                <div>
                    <input id="login_submit" type="submit" name=submit value=submit>
                </div>
            </form>
        </div>
        <div id="login_signup">
            Don't have an account?
            <a href="/user/sign" class="login_forgot">sign up</a>
        </div>
        <div class="login_error">
            {{#each message}}
            <p>{{this}}</p>
            {{/each}}
        </div>
    </div>
    <div>
    </div>
</div>